<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XAU Alerter"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discord channel alarm monitor"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNotifStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking notification access..."
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchMonitoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Monitoring"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discord Channels (comma-separated)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etChannels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="xau, assassin-xau, umrah-challenge"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="@drawable/edit_bg"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keywords - optional (comma-separated)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etKeywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="XAU, BUY, SELL"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="@drawable/edit_bg"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Sound"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAlarmSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default alarm"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPickSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Alarm Sound"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Alarm"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permissions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnNotifAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Notification Access"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable Battery Optimization"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infinix / XOS users: Also open Phone Manager > App Management > Auto-start and enable this app. Long-press the app in Recents and tap Lock to prevent it from being killed."
            android:textSize="12sp"
            android:textColor="#999999"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
